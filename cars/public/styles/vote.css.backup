/* style.css */
body {
    font-family: 'Arial', sans-serif;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.vote-container {
    background: #ffffff;
    padding: 2em;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 400px;
    text-align: center;
}

.vote-container h2 {
    margin-bottom: 1.5em;
    font-size: 24px;
    color: #333;
}

.vote-container p {
    margin-bottom: 1.5em;
    font-size: 18px;
    color: #555;
}

.input-group {
    margin-bottom: 1em;
    text-align: left;
}

.input-group label {
    display: block;
    margin-bottom: 0.5em;
    font-weight: bold;
    color: #555;
}

.input-group select {
    width: 100%;
    padding: 0.5em;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
}

.input-group select:focus {
    border-color: #007BFF;
    outline: none;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
}

.btn {
    background: #007BFF;
    color: #fff;
    padding: 0.5em 1em;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: background 0.3s;
}

.btn:hover {
    background: #0056b3;
}

.vote-container h3 {
    margin-top: 2em;
    font-size: 20px;
    color: #333;
}

.vote-list {
    list-style-type: none;
    padding: 0;
}

.vote-list li {
    background: #f9f9f9;
    margin: 0.5em 0;
    padding: 0.5em;
    border-radius: 5px;
    font-size: 18px;
    color: #555;
}

.logout-link {
    display: inline-block;
    margin-top: 1.5em;
    color: #007BFF;
    text-decoration: none;
    font-size: 16px;
    transition: color 0.3s;
}

.logout-link:hover {
    color: #0056b3;
}

