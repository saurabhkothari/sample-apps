<body>
  <div class="vote-container">
    <h2>Welcome to Cars App</h2>
    <p>Hello, <%= user %>. Please vote for your favorite car:</p>

    <div class="car-container">
      <div class="car">
        <form action="/vote" method="POST">
          <input type="hidden" name="car" value="BMW">
          <button type="submit" class="vote-btn">
            <img src="/images/bmw.jpg" alt="BMW" class="car-image">
          </button>
        </form>
      </div>
      <div class="car">
        <form action="/vote" method="POST">
          <input type="hidden" name="car" value="Audi">
          <button type="submit" class="vote-btn">
            <img src="/images/audi.jpg" alt="Audi" class="car-image">
          </button>
        </form>
      </div>
      <div class="car">
        <form action="/vote" method="POST">
          <input type="hidden" name="car" value="Mercedes">
          <button type="submit" class="vote-btn">
            <img src="/images/mercedes.jpg" alt="Mercedes-Benz" class="car-image">
          </button>
        </form>
      </div>
    </div>

    <div class="vote-summary">
      <div class="summary-item">BMW: <%= votes.BMW %></div>
      <div class="summary-item">Audi: <%= votes.Audi %></div>
      <div class="summary-item">Mercedes-Benz: <%= votes.Mercedes %></div>
    </div>

    <a href="/logout" class="logout-link">Logout</a>
  </div>
</body>
</html>

